{
  "name": "@trycompai/email",
  "description": "Email templates and utilities for Comp AI",
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "@react-email/components": "^0.0.41",
    "@react-email/render": "^1.1.2",
    "@react-email/tailwind": "1.0.5",
    "@trycompai/ui": "workspace:*",
    "@trycompai/utils": "workspace:*",
    "date-fns": "^4.1.0",
    "next": "^16.0.3",
    "react-email": "^4.0.15",
    "resend": "^6.4.2",
    "responsive-react-email": "^0.0.5"
  },
  "devDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./emails/*": {
      "types": "./dist/emails/*.d.mts",
      "import": "./dist/emails/*.mjs"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.mts",
      "import": "./dist/lib/*.mjs"
    }
  },
  "files": [
    "dist/**",
    "README.md"
  ],
  "keywords": [
    "comp-ai",
    "email-templates",
    "react-email"
  ],
  "license": "MIT",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/comp-ai/comp.git",
    "directory": "packages/email"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "tsdown --watch",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "types": "./dist/index.d.mts"
}
