{
  "extends": "../tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "types": ["react", "react-dom"],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"]
    }
  },
  "include": ["src", "lib/utils.ts", "hooks/use-mobile.ts"],
  "exclude": ["node_modules", "dist"]
}
