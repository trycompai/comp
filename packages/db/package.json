{
  "name": "@trycompai/db",
  "description": "Database package with Prisma client and schema for Comp AI",
  "version": "2.0.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@prisma/client-runtime-utils": "^7.0.0",
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@trycompai/tsconfig": "workspace:*",
    "@types/node": "^24.10.1",
    "prisma": "^7.0.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md",
    "INTEGRATION_GUIDE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trycompai/comp.git",
    "directory": "packages/db"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist .turbo node_modules",
    "typecheck": "tsc --noEmit",
    "push": "prisma db push",
    "studio": "prisma studio",
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "db:seed": "bun prisma/seed/seed.ts",
    "docker:clean": "docker compose down -v",
    "docker:down": "docker compose down",
    "docker:up": "docker compose up -d",
    "lint": "eslint .",
    "prepublishOnly": "bun run build"
  }
}
