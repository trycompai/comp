{
  "name": "@trycompai/db",
  "description": "Database package with Prisma client and schema for Comp AI",
  "version": "1.3.22",
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^16.4.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "prisma": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.2"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./server": {
      "types": "./src/server.ts",
      "import": "./src/server.ts",
      "default": "./src/server.ts"
    },
    "./postinstall": {
      "import": "./dist/postinstall.js",
      "types": "./src/postinstall.ts",
      "default": "./dist/postinstall.js"
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./postinstall": {
        "import": "./dist/postinstall.js",
        "types": "./dist/postinstall.d.ts",
        "default": "./dist/postinstall.js"
      }
    }
  },
  "bin": {
    "comp-prisma-postinstall": "./dist/postinstall.js"
  },
  "files": [
    "dist",
    "README.md",
    "INTEGRATION_GUIDE.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trycompai/comp.git",
    "directory": "packages/db"
  },
  "scripts": {
    "build": "rm -rf dist && rm -rf ./src/generated && node scripts/combine-schemas.js && prisma generate && tsc",
    "check-types": "tsc --noEmit",
    "db:generate": "node scripts/combine-schemas.js && prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:seed": "bun prisma/seed/seed.ts",
    "db:studio": "prisma studio",
    "docker:clean": "docker compose down -v",
    "docker:down": "docker compose down",
    "docker:up": "docker compose up -d",
    "lint": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json}' 'prisma/**/*.prisma' && tsc --noEmit",
    "prepublishOnly": "bun run build"
  }
}
