{
  "name": "comp",
  "version": "1.45.1",
  "dependencies": {
    "@trigger.dev/sdk": "^3.3.17"
  },
  "devDependencies": {
    "@azure/core-http": "^3.0.5",
    "@azure/core-rest-pipeline": "^1.21.0",
    "@azure/core-tracing": "^1.2.0",
    "@azure/identity": "^4.10.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@hookform/resolvers": "^5.1.1",
    "@number-flow/react": "^0.5.9",
    "@prisma/adapter-pg": "6.10.1",
    "@react-email/components": "^0.0.41",
    "@react-email/render": "^1.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@trigger.dev/build": "^3.3.17",
    "@types/bun": "^1.2.15",
    "@types/d3": "^7.4.3",
    "@types/lodash": "^4.17.17",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.1",
    "ai": "^4.3.16",
    "better-auth": "^1.2.8",
    "concurrently": "^9.2.0",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "gitmoji": "^1.1.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-email": "^4.0.15",
    "react-hook-form": "^7.58.1",
    "semantic-release": "^24.2.5",
    "semantic-release-discord": "^1.2.0",
    "semantic-release-discord-notifier": "^1.0.11",
    "sharp": "^0.34.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "use-debounce": "^10.0.4",
    "zod": "3.25.67"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "packageManager": "bun@1.1.36",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "bun run -F @comp/db db:generate",
    "db:migrate": "bun run -F @comp/db db:migrate",
    "db:push": "bun run -F @comp/db db:push",
    "db:seed": "bun run -F @comp/db db:seed",
    "db:studio": "bun run -F @comp/db db:studio",
    "deploy:trigger-prod": "npx trigger.dev@latest deploy",
    "deps:check": "syncpack list-mismatches",
    "deps:dedupe": "syncpack fix-mismatches && bun install",
    "deps:fix": "syncpack fix-mismatches",
    "deps:lint": "syncpack lint",
    "deps:update": "syncpack update",
    "deps:upgrade": "syncpack update && bun install",
    "dev": "turbo dev --parallel",
    "docker:clean": "bun run -F @comp/db docker:clean",
    "docker:down": "bun run -F @comp/db docker:down",
    "docker:up": "bun run -F @comp/db docker:up",
    "format": "prettier --write .",
    "lint": "turbo lint && syncpack lint",
    "prepare": "husky",
    "test": "turbo test --parallel",
    "typecheck": "turbo typecheck",
    "typecheck:ci": "turbo typecheck --filter={apps/**} --filter={packages/**} --filter=!@comp/integrations --filter=!@comp/ui"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
