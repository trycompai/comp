{
  "name": "comp",
  "version": "2.0.0",
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "eslint --fix"
  },
  "packageManager": "pnpm@10.22.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "deploy:trigger-prod": "pnpx trigger.dev@4.0.6 deploy",
    "dev": "turbo dev --parallel",
    "format": "turbo format",
    "lint": "turbo lint",
    "prepare": "husky",
    "test": "turbo test --parallel",
    "test:release": "node scripts/test-release.js",
    "typecheck": "turbo typecheck",
    "typecheck:ci": "turbo typecheck --filter={apps/**} --filter={packages/**} --filter=!@trycompai/integrations --filter=!@trycompai/ui",
    "db:push": "turbo -F @trycompai/db push",
    "db:generate": "turbo -F @trycompai/db generate",
    "db:migrate": "turbo -F @trycompai/db migrate",
    "db:seed": "turbo -F @trycompai/db seed",
    "db:studio": "turbo -F @trycompai/db studio",
    "postinstall": "pnpx sherif@latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@trycompai/eslint-config": "workspace:*",
    "@trycompai/tsconfig": "workspace:*",
    "@types/bun": "^1.3.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "^25.0.2",
    "semantic-release-discord": "^1.2.0",
    "semantic-release-discord-notifier": "^1.0.15",
    "sharp": "^0.34.5",
    "tsdown": "^0.16.6",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "tiptap-extension-global-drag-handle": "^0.1.18"
    }
  }
}
